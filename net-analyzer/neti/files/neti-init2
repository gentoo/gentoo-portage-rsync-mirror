depend() {
    need net
}

start() {
	ebegin "Starting netiathome"
	start-stop-daemon --start --quiet --exec /usr/sbin/neti -- -D
	eend $?
}

stop() {
	ebegin "Stopping netiathome"
	start-stop-daemon --stop --quiet --exec /usr/sbin/neti
	eend $?
}
