depend() {
	need net
}

start() {
	ebegin "Starting rxecho"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/rxecho
	eend $?
}

stop() {
	ebegin "Stopping rxecho"
	start-stop-daemon --stop --quiet --exec /usr/sbin/rxecho
	eend $?
}
