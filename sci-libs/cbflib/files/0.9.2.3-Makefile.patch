diff --git a/Makefile_LINUX_gcc42 b/Makefile_LINUX_gcc42
index a74be5f..1cfb066 100644
--- a/Makefile_LINUX_gcc42
+++ b/Makefile_LINUX_gcc42
@@ -250,7 +250,10 @@
 
 
 # Version string
-VERSION = 0.9.2
