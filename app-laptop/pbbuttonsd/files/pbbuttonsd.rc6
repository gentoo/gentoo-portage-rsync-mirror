depend() {
	use alsasound
}

start() {
	ebegin "Starting pbbuttonsd"
	/usr/bin/pbbuttonsd -d > /dev/null
	eend $?
}

stop() {
	ebegin "Stopping pbbuttonsd"
	start-stop-daemon --stop --quiet --exec /usr/bin/pbbuttonsd
	eend $?
}
