-CFLAGS += -pthread
+CXXFLAGS += -pthread
 
 # External libraries
-LDFLAGS = -lbz2
-LDFLAGS += -lpthread
+LIBS = -lbz2
+LIBS += -lpthread
 
 # Where you want pbzip2 installed when you do 'make install'
 PREFIX = /usr
@@ -47,11 +45,11 @@
 
 # Standard pbzip2 compile
 pbzip2: pbzip2.cpp BZ2StreamScanner.cpp ErrorContext.cpp
