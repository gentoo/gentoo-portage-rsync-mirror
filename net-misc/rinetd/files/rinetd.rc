depend() {
	use net
}

start() {
	ebegin "Starting rinetd"
	/usr/sbin/rinetd
	eend $?
}

stop() {
	local ret
	ebegin "Stopping rinetd"
	start-stop-daemon --stop --pidfile /var/run/rinetd.pid
	ret=$?
	rm -f /var/run/rinetd.pid
	eend ${ret}
}
